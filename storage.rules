rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Driver documents - allow admin and driver access
    match /drivers/{driverId}/documents/{documentType}/{document=**} {
      allow read: if true; // Allow public read access for admin viewing
      allow write: if true; // Allow unauthenticated uploads for mobile app
    }
    
    // Legacy driver documents path
    match /driver-documents/{userId}/{document=**} {
      allow read: if true; // Allow public read access
      allow write: if true; // Allow unauthenticated uploads for mobile app
    }
    
    // Profile photos - allow authenticated users to upload their own photos
    match /profiles/{userId}/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public documents (if any)
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Admin access to all driver documents
    match /drivers/{driverId}/{allPaths=**} {
      allow read: if true; // Allow admin to read all driver documents
      allow write: if true; // Allow admin to manage documents
    }
  }
}
