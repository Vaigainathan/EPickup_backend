rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow admin access
    match /users/{userId} {
      allow read, write: if true; // Allow admin access to all user data
    }
    
    // Document verification requests - allow admin access
    match /documentVerificationRequests/{requestId} {
      allow read, write: if true; // Allow admin access to verification requests
    }
    
    // Driver documents collection - allow admin access
    match /driverDocuments/{documentId} {
      allow read, write: if true; // Allow admin access to driver documents
    }
    
    // Emergency alerts - allow admin access
    match /emergencyAlerts/{alertId} {
      allow read, write: if true; // Allow admin access to emergency alerts
    }
    
    // Bookings - allow admin access
    match /bookings/{bookingId} {
      allow read, write: if true; // Allow admin access to bookings
    }
    
    // Support tickets - allow admin access
    match /supportTickets/{ticketId} {
      allow read, write: if true; // Allow admin access to support tickets
    }
    
    // System health - allow admin access
    match /systemHealth/{healthId} {
      allow read, write: if true; // Allow admin access to system health
    }
    
    // Admin settings - allow admin access
    match /adminSettings/{settingId} {
      allow read, write: if true; // Allow admin access to admin settings
    }
    
    // File uploads - allow admin access
    match /fileUploads/{uploadId} {
      allow read, write: if true; // Allow admin access to file uploads
    }
    
    // Default rule for any other collections
    match /{document=**} {
      allow read, write: if true; // Allow admin access to all other collections
    }
  }
}