{
  "name": "epickup-backend",
  "version": "1.0.0",
  "description": "Backend API server for EPickup delivery service platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "validate:config": "node scripts/validate-config.js",
    "validate:security": "node scripts/validate-security.js",
    "test:all": "node scripts/test-all-services.js",
    "create-indexes": "node scripts/create-firestore-indexes.js",
    "setup:backend": "npm run validate:config && npm run migrate && npm run test:all",
    "start:backend": "node scripts/start-backend.js",
    "verify:deployment": "node scripts/verify-deployment.js",
    "deploy:prepare": "bash scripts/deploy-to-render.sh",
    "deploy:prepare:win": "scripts\\deploy-to-render.bat"
  },
  "keywords": [
    "delivery",
    "logistics",
    "firebase",
    "express",
    "nodejs",
    "api"
  ],
  "author": "EPickup Team",
  "license": "MIT",
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.3.42",
    "@sentry/node": "^10.5.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "firebase-messaging": "^1.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.8.6",
    "redis": "^4.6.10",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "chalk": "^4.1.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epickup/backend.git"
  },
  "bugs": {
    "url": "https://github.com/epickup/backend/issues"
  },
  "homepage": "https://github.com/epickup/backend#readme"
}
