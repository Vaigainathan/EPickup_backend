{
  "name": "epickup-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API server for EPickup delivery service platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node --expose-gc src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/",
    "migrate": "node src/database/migrate.js",
    "migrate:enhanced": "node src/database/migrateEnhanced.js",
    "migrate:wallet": "node src/database/migrateWallet.js",
    "migrate:work-slots": "node scripts/migrate-to-work-slots.js",
    "seed": "node src/database/seed.js",
    "validate:config": "node scripts/validate-config.js",
    "generate-slots": "node scripts/generate-daily-slots.js",
    "validate:security": "node scripts/validate-security.js",
    "test:all": "node scripts/test-all-services.js",
    "create-indexes": "node scripts/setup-firebase-indexes.js",
    "deploy:firestore-rules": "firebase deploy --only firestore:rules",
    "deploy:storage-rules": "firebase deploy --only storage",
    "deploy:firestore-indexes": "firebase deploy --only firestore:indexes",
    "verify:realtime": "node scripts/verify-realtime-setup.js",
    "deploy:prepare": "bash scripts/deploy-to-render.sh",
    "backup:users": "node scripts/backup-users-before-migration.js",
    "migrate:firebase-users": "node scripts/migrate-to-firebase-users.js",
    "rollback:migration": "node scripts/rollback-migration.js",
    "deploy:firebase": "node scripts/deploy-firebase-indexes.js",
    "setup:backend": "npm run validate:config && npm run migrate && npm run test:all",
    "start:backend": "node scripts/start-backend.js",
    "verify:deployment": "node scripts/verify-deployment.js",
    "deploy:prepare:win": "scripts\\deploy-to-render.bat"
  },
  "keywords": [
    "delivery",
    "logistics",
    "firebase",
    "express",
    "nodejs",
    "api"
  ],
  "author": "EPickup Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/firestore": "^7.11.3",
    "@google-cloud/recaptcha-enterprise": "^6.3.0",
    "@googlemaps/google-maps-services-js": "^3.3.42",
    "@opentelemetry/api": "^1.9.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^10.5.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-server-sdk": "^3.7.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-rc.4",
    "nodemailer": "^6.9.7",
    "rate-limit-redis": "^3.0.0",
    "razorpay": "^2.8.6",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.8",
    "chalk": "^4.1.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glob": "^10.3.10",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epickup/backend.git"
  },
  "bugs": {
    "url": "https://github.com/epickup/backend/issues"
  },
  "homepage": "https://github.com/epickup/backend#readme"
}
