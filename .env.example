# Server Configuration
PORT=3000
NODE_ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=epickup-app
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your_cert_url

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Payment Gateway (PhonePe)
PHONEPE_MERCHANT_ID=your_phonepay_merchant_id
PHONEPE_SALT_KEY=your_phonepay_salt_key
PHONEPE_SALT_INDEX=your_phonepay_salt_index
PHONEPE_BASE_URL=https://api.phonepe.com/apis/pg-sandbox
PHONEPE_REDIRECT_URL=https://epickup-app.web.app/payment/callback

# Payment Gateway (Razorpay - backup)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# SMS Service (Twilio - backup)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Notification Service Configuration
SMS_PROVIDER=twilio
SMS_FALLBACK_ENABLED=true
NOTIFICATION_UPDATE_INTERVAL=10000
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_LOG_RETENTION_DAYS=30

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Database
DATABASE_URL=your_database_url

# Allowed Origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://epickup-app.web.app


# Backend and Frontend URLs
BACKEND_URL=http://localhost:3000
FRONTEND_URL=https://epickup-app.web.app

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# FCM v1 API Configuration (Recommended - No Server Key needed)
# Use Google Service Account JSON instead of FCM_SERVER_KEY
PUSH_NOTIFICATION_ENABLED=true
FCM_USE_V1_API=true
FCM_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Development
DEBUG=true
MOCK_SERVICES=false
TEST_PHONE_NUMBERS=9999999999,8888888888,7777777777
